%header
  #logo 
    %a{href: "/"}
      Linkalici.o.us
  %a{href: "/links/new", class: "button highlighted"}
    Add link
  #user-links
  - if current_user 
    %span{id: 'welcome-message'}
      Welcome, #{current_user.email}
    %form{id: "sign-out", method: "post", action: "/sessions"}
      %input{type: "hidden", name: "_method", value: "delete"}
      %input{type: "submit", value: "Sign out"}

  - else
    %a{href: '/users/new', id: 'sign-up', class: 'button'}
      Sign up
    %a{href: '/sessions/new', id: 'sign-in', class: 'button'}
      Sign in
